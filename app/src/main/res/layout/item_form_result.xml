<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_marginBottom="10dp"
    android:padding="15dp"
    android:background="@drawable/rounded_corners">

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nombre_empresa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre Empresa"
            android:textColor="@color/black"
            android:textSize="22sp"
            tools:ignore="HardcodedText"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/servicio_contratado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Servicio Contratado"
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/btn_ver_resultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="20dp"
            android:background="@drawable/btn"
            android:padding="10dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/form"
                android:contentDescription="Icono Formulario" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_finanzas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/btn"
            android:padding="10dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/finanzas"
                android:contentDescription="Icono Finanzas" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
